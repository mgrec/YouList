{% include "blocks/footer.twig" %}

<script>
    $('#add-username-input').keypress(function (e) {
        if (e.which == 13) {
            $.ajax({
                url: 'http://localhost:8000/add-user',
                type: "POST",
                dataType: 'JSON',
                data: {
                    'name': $(this).val()
                },
                success: function (data) {
                    if (data.status == "error") {
                        alert('votre naviagteur ne supporte pas l\'AJAX')
                    } else {

                    }
                }
            });
            window.location.replace('/wall/' + $(this).val());
        }
    });

    $('#add-go-input').keypress(function (e) {
        if (e.which == 13) {
            window.location.replace('/wall/' + $(this).val());
        }
    });

</script>